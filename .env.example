# ============================================
# FlowAutomator - Environment Variables
# ============================================
# Copy this file to .env and update values

# Database
DATABASE_URL=postgresql://flowautomator:secretpassword@localhost:5432/flowautomator
DB_USER=flowautomator
DB_PASSWORD=secretpassword
DB_NAME=flowautomator

# Redis
REDIS_URL=redis://localhost:6379

# API Configuration
PORT=3001
NODE_ENV=development

# Security - GENERATE STRONG SECRETS IN PRODUCTION!
# Generate with: openssl rand -base64 64
JWT_SECRET=your-super-secret-jwt-key-change-in-production
ENCRYPTION_KEY=your-32-character-encryption-key!

# CORS - Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:3000,http://localhost:3005

# Frontend API URL
NEXT_PUBLIC_API_URL=http://localhost:3001

# ============================================
# Third-Party API Keys (Optional)
# ============================================

# Tokopedia
TOKOPEDIA_FS_ID=
TOKOPEDIA_CLIENT_ID=
TOKOPEDIA_CLIENT_SECRET=

# Shopee
SHOPEE_PARTNER_ID=
SHOPEE_PARTNER_KEY=

# Instagram/Facebook
FACEBOOK_APP_ID=
FACEBOOK_APP_SECRET=

# WhatsApp
WHATSAPP_PHONE_NUMBER_ID=
WHATSAPP_ACCESS_TOKEN=

# TikTok
TIKTOK_APP_ID=
TIKTOK_APP_SECRET=

# Google
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Email SMTP
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
